<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Team Building - Activities</title>
    <%= stylesheet '/style.css' %>
  </head>

  <body>

    <div class="banner">
			<div class="container">
				<h1>Team Building - Activities</h1>
				<h2>Discover our activities</h2>
			</div>
		</div>

    <div class="card">

      <% tab_cities= []%>
      <% @all_activities.each do |activity| %>
        <% tab_cities << activity["city"] %>
      <% end %>
      <% tab_cities = tab_cities.uniq %>

      <% tab_cities.each do |city| %>
        <a href="/?location=<%= city %>" class="btn-book"><%= city %></a>
      <% end %>

      <%#
      <a href="/?location=Nantes" class="btn-book">Nantes</a>
      <a href="/?location=Paris" class="btn-book">Paris</a>
      %>

      <% tab_categories= []%>
      <% @all_activities.each do |activity| %>
        <% tab_categories << activity["category"] %>
      <% end %>
      <% tab_categories = tab_categories.uniq %>

      <% tab_categories.each do |category| %>
        <a href="/?category=<%= category %>" class="btn-book"><%= category %></a>
      <% end %>


    </div>

    <div class="cards">
      <% @activities.each do |activity| %>
        <div class="card">

          <div class="left-div">
            <h3 title="<%= activity["name"] %>"><%= activity["name"] %></h3>
            <div class="card-image" style="background-image: url(<%=activity["photo_url"]%>)" title="<%=activity["name"]%>"></div>
          </div>

          <div class="right-div">
            <span class="activity"><%= activity["category"].upcase %></span>
            <h4>🌍 <%= activity["city"] %></h4>
            <p>🕒 <%= activity["duration"] %> minutes</p>
            <p>👪 <%= activity["participants_count"]%> participants</p>
            <h4>💳 <%= activity["price"] %> €</h4>
            <a href="/activities/<%= activity["id"] %>" class="btn-book">Book a session</a>
          </div>

        </div>
      <% end %>
    </div>

  </body>
</html>
